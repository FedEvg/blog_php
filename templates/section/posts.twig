{% for post in posts %}
    <div class="col-6">
        <div class="card" style="width: 25rem;">
            {% if post.image_path is not null %}
                <img src="{{ asset_url(post.image_path) }}" alt="{{ post.title|escape }}" width="100%">
                {% else %}
                    <img src="https://pravda.if.ua/wp-content/uploads/2023/03/4-2-768x437.jpg" alt="{{ post.title|escape }}" width="100%">
            {% endif %}
            <div class="card-body">
                <h5 class="card-title"><a href="{{ post.url_key|escape }}">{{ post.title|escape }}</a></h5>
                <p class="card-text text-truncate">{{ post.description|escape }}</p>
                <a href="{{ post.url_key|escape }}" class="btn btn-primary">Read more</a>
            </div>
        </div>
    </div>
{% endfor %}